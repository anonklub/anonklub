{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#format": {},
    "//#lint": {},
    "typecheck": {
      "inputs": ["{src,test}/**/*.{j,t}s?(x)"]
    },
    "build": {
      "dependsOn": ["^build", "build.graph"],
      "outputs": ["{build,dist,.next}/**", "!.next/cache"]
    },
    "build.graph": {
      "outputs": ["src/lib/graph/.graphclient/**"]
    },
    "test": {
      "dependsOn": ["format", "lint", "build"],
      "inputs": ["{src,test}/**/*.{j,t}s?(x)"]
    },
    "deploy": {
      "dependsOn": ["test"]
    }
  }
}
