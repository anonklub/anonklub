{
  "name": "poseidon-ecdsa-membership",
  "version": "1.0.0",
  "description": "Prove membership in a poseidon merkle tree by proving an ECDSA signature",
  "main": "",
  "scripts": {
    "fix": "npm run lint.fix && npm run format.fix",
    "format": "is-ci-cli format.ci format.check",
    "format.check": "prettier --check .",
    "format.ci": "prettier src --check --loglevel warn",
    "format.fix": "prettier --write .",
    "lint": "is-ci-cli lint.ci lint.check",
    "lint.check": "eslint . --ext .js,.ts",
    "lint.ci": "eslint . --ext .ts --quiet",
    "lint.fix": "eslint . --ext .js,.ts --fix",
    "test": "bash maybe-fix-circom-imports.sh && mocha --max-old-space-size=4000 -r ts-node/register test/circuit.test.ts",
    "validate": "concurrently 'npm run test' 'npm run format' 'npm run lint'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@noble/secp256k1": "^1.7.0",
    "circom-ecdsa": "github:0xPARC/circom-ecdsa",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "ffjavascript": "^0.2.57",
    "is-ci-cli": "^2.2.0",
    "play-contracts": "github:ChihChengLiang/poseidon-tornado"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "chai": "^4.3.7",
    "circom_tester": "^0.0.19",
    "eslint-plugin-sort": "^2.4.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
