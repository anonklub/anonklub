{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": ["src"]
}
