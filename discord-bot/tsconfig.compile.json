{
	"extends": "./tsconfig.json",
	"exclude": ["test"],
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"moduleResolution": "Node",
		"sourceRoot": "src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist/types",
		"removeComments": true,
		"preserveConstEnums": true
	}
}
