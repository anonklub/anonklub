{
  "extends": "./tsconfig.json",
  "exclude": ["test", "test/jest.config.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noEmit": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES2022"
  }
}
